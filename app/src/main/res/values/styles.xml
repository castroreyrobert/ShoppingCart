<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomRadioButtonTextAppearance">
        <item name="android:fontFamily">@font/montserrat_extra_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CustomRadioItem">
        <item name="android:textAppearance">@style/CustomRadioButtonTextAppearance</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/checked_color</item>
        <item name="android:fillColor">@color/checked_color</item>
        <item name="android:tint">@color/checked_color</item>
        <item name="android:button">@null</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/ic_tag_name_bg</item>
    </style>
</resources>